#include <stdio.h>
#include <stdlib.h>

#define ARRAY_SIZE 10

void min_max (int *a, int n, int *max, int *min){
    int i=0;

    for (i = 0, i < n, i++){
        if (i = 0){
            *min = a[i];
            *max = a[i];
        }
        if (a[i] < min){
            *min = a[i];
        }
        if (a[i] > max){
            *max = a[i];
        }
    }
}

int main (void){
    int my_array [] = {5,2,7,3,4};
    int biggest, smallest;
    max_min (my_array, 5, &biggest, &smallest);
    printf("max value is %d, min value is %d\n", biggest, smallest);
}

    
